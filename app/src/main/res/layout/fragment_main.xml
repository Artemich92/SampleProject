<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="FragmentMainBinding">

        <variable
            name="vm"
            type="com.sampleproject.presentation.main.MainVM" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".android.presentation.main.MainFragment"
        tools:ignore="SpUsage, ContentDescription">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbarThumbVertical="@android:color/transparent"
            android:scrollbars="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="92dp"
                app:setBackground="@{vm.isTrueResponse()}"
                tools:context=".android.presentation.main.MainFragment"
                tools:ignore="SpUsage, ContentDescription">

                <Button
                    android:id="@+id/trueRequestButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="True "
                    android:onClick="@{() -> vm.trueRequestClick()}"
                    android:layout_marginStart="40dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/falseRequestButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="False"
                    android:onClick="@{() -> vm.falseRequestClick()}"
                    android:layout_marginEnd="40dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

    </FrameLayout>
</layout>
